extends layout

block content
  .reset-password-container
    h1 Reset Your Password
    form(method="POST" action="/api/v1/auth/reset-password" enctype="application/x-www-form-urlencoded")
      input(type="hidden" name="token" value=token)
      input(type="hidden" name="id" value=id)

      .form-group
        label(for="newPassword") New Password
        input(
          type="password" 
          id="newPassword" 
          name="newPassword" 
          required
          minlength="8"
        )
        small.text-muted Minimum 8 characters

      .form-group
        label(for="confirmPassword") Confirm Password
        input(
          type="password" 
          id="confirmPassword" 
          name="confirmPassword" 
          required
        )

      if error
        .alert.alert-danger= error

      button.btn.btn-primary(type="submit") Reset Password